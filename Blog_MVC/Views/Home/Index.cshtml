
<header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Nathan's Blog</h1>
                    <hr class="small">
                    <span class="subheading">A thoughtful and completely unsarcastic "safe space"</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    @foreach (var blogPost in ViewBag.AllBlogPosts)
    {
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-preview">
                    <p>
                        <h2 class="post-title">
                             @Html.ActionLink((string)blogPost.Title, "Details", "Home", new { Id = blogPost.Id })                          
                        </h2>
                    </p>
                    <p>
                        <h5>
                            @Html.DisplayName((string)blogPost.Body)
                        </h5>
                    </p>
                    <p class="post-meta">Posted by @Html.DisplayName((string)blogPost.Author) on @Html.DisplayName((string)blogPost.Created.ToString())</p>
                </div>
            </div>
        </div>
    }
</div>
