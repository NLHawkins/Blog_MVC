@model Blog_MVC.Models.BlogPost

<header class="intro-header" style="background-image: url('/img/contact-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>Create Post</h1>
                    <hr class="small">
                    <span class="subheading">Lay down some knowledge!</span>
                </div>
            </div>
        </div>
    </div>
</header>
@using (Html.BeginForm("Create", "Home"))
{
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <form>
                    <h4>Create A Post</h4>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>@Html.DisplayNameFor(n=>n.Title)</label>
                            @Html.TextBox("Title", null, new { @class = "form-control", placeholder = "Title" })
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>@Html.DisplayNameFor(n => n.Author)</label>
                            @Html.TextBox("Author", null, new { @class = "form-control", placeholder = "Your Name" })
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>@Html.DisplayNameFor(n => n.Body)</label>
                            @Html.TextArea("Body", null, new { @class = "form-control", placeholder = "Write your post...." })
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-default">Post</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}
